; top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.js]
indent_size = 4

[*.css]
indent_size = 4

[*.sass]
indent_size = 4

[*.less]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
